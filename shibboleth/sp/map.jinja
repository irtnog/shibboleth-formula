{% import_yaml "shibboleth/sp/defaults.yaml" as default_settings %}

{% set os_family_map = salt['grains.filter_by']({
    'FreeBSD': {
      'packages': [
        'shibboleth-sp',
      ],
      'confdir':
        '/usr/local/etc/shibboleth',
      'services': [
        'shibboleth-sp',
      ],
      'mod_shib_user':
        'www',
    },
    'RedHat': {
      'mod_shib_user':
        'apache',
    },
    'default': {},
  }) %}

{% do default_settings.shibboleth.sp.update(os_family_map) %}

{% set shibsp_settings = salt['pillar.get']('shibboleth:sp',
  default=default_settings.shibboleth.sp, merge=True) %}
